# .env.example for Supplier Performance Predictor AI System
# Copy this file to .env and update with your actual credentials

# Azure OpenAI Configuration (Required)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1

# LangSmith Configuration for AI Observability (Optional but Recommended)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=supplier-performance-predictor
LANGSMITH_TRACING=true
LANGCHAIN_TRACING_V2=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
DATABASE_URL=sqlite:///./supplier_predictor.db

# Database Configuration (for Docker Compose MySQL)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=supplier_db
MYSQL_USER=supplier_user
MYSQL_PASSWORD=supplier_password

# Authentication & Security
SECRET_KEY=your_secret_key_for_sessions_please_change_this
API_TOKEN=hackathon-token

# Server Configuration
HOST=0.0.0.0
PORT=8001

# Container Configuration
CONTAINER_PORT=8001
HOST_PORT=8002

# Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@company.com
API_TOKEN=hackathon-token
AZURE_OPENAI_DEPLOYMENT=4o-mini
FAISS_INDEX_PATH=data/faiss.index
LANGSMITH_API_KEY=your_langsmith_api_key_here
# For future: ENTRA_ID_CLIENT_ID=your-client-id
